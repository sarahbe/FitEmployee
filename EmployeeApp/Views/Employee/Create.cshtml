@model EmployeeApp.Models.EmployeeInfo
<div class="top-buffer"></div>
<div class="panel panel-primary">
    <div class="panel-heading panel-head">New Employee</div>
    <div class="panel-body">
        <form asp-action="AddEmployee" role="form">
            <div class="form-horizontal">
                <div class="form-group">
                    <label asp-for="Name" class="col-lg-3 col-sm-3 control-label"></label>
                    <div class="col-lg-3 col-sm-6">
                        <input asp-for="Name" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="col-lg-3 col-sm-3 control-label"></label>
                    <div class="col-lg-3 col-sm-6">
                        <input asp-for="Email" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="col-lg-3 col-sm-3 control-label"></label>
                    <div class="col-lg-3 col-sm-6">
                        <input asp-for="PhoneNumber" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label  asp-for="EmployeeImage" class="col-lg-3 col-sm-3 control-label">
                    </label>
                    <div class="col-lg-3 col-sm-6">
                        <input type="file" asp-for="EmployeeImage"  class="form-control" name="EmployeeImage" id="EmployeeImage">
                    </div>
                </div>
                <div class="col-lg-6 col-sm-8 pull-right">
                    <button class="btn btn-success" id="btn" type="submit">Submit</button>
                </div>

            </div>
        </form>
    </div>
</div>